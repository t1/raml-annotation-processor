<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.github.t1.ramlap" level="DEBUG" />
    <logger name="com.github.t1.ramlap.SchemaGenerator" level="ALL" />
    <logger name="com.github.t1.ramlap.ExampleGenerator" level="ALL" />
</configuration>
